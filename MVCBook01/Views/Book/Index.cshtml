@model IEnumerable<MVCBook01.Models.Book>

@{
    ViewData["Title"] = "Library Manager";
}

<div class="container-fluid indexTable">
  

    <h3>Book Manager Dashboard</h3>
    <hr />
    <p>
        <a class="btn btn-success" role="button" asp-action="Create">Enter New Book</a>
    </p>
    <table class="table table-striped table-bordered text-capitalize table-responsive ">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PubDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                      <a href="/book/details/@item.Id" data-toggle="tooltip" title="Get Book Details">  @Html.DisplayFor(modelItem => item.Title)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.PubDate)
                    </td>
                    <td class="iconAlign">
                        <a href="/book/edit/@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="/book/delete/@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
